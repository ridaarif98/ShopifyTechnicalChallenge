<h1 class="heading m-3"> Delete History</h1>

<div class="mb-3 col-sm-2 m-3">
    <%=link_to 'Back', items_path, class:"btn btn-primary form-control"%>
</div>
<div class="listDiv m-3">
<table class="table table-striped table-bordered">
    <thead>
        <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total Price</th>
        <th>Delete at</th>
        <th>Action</th>
        </tr>
    </thead>

    <tbody>
    <% if @items.any?%>
    <% @items.each do |item|%>
    <tr>
      <td><%= item.name%></th>
      <td><%= item.quantity%></td>
      <td>$<%= item.price%></td>
      <td>$<%= item.price*item.quantity%></td>
      <td><%= item.updated_at%></td>
     
      <td class="mb-3 col-sm-2">
      <%=form_with url: test_path(item),method: "put" do |f| %>
        <%=f.submit "Restore", class:"btn btn-primary form-control m-1"%>
    <%end%>
    
    <%=button_to "Delete Permanent", item, method: :delete, class:"btn btn-primary form-control m-1"%>
  
       </td>
  
    </tr>
    <% end %>
    <%else%>
    <h2>No item</h2>
    <%end%>
    </tbody>
</table>

</div>