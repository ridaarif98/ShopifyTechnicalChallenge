<h1 class="heading"> All Items</h1>

<div class="mb-3 col-sm-2 btn-div">
    <%= link_to "Add Item", new_item_path, class:"btn btn-primary form-control" %>
    <%= link_to "View Deleted Items", deleted_path, class:"btn btn-primary form-control" %>
    </div>

<div class="listDiv">
<table class="table table-striped table-bordered">
    <thead>
        <tr>
        <th >Item</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total Price</th>
        <th>Action</th>
        </tr>
    </thead>

    <tbody>
    <% if @items.any?%>
    <% @items.each do |item|%>
    <tr>
      <td><%= item.name%></th>
      <td><%= item.quantity%></td>
      <td>$<%= item.price%></td>
      <td>$<%= item.price*item.quantity%></td>
      <td class="mb-3 col-sm-2 d-f">
     <%=link_to "Edit", edit_item_path(id: item.id) , class:"btn btn-outline-dark"%>
      
      
      <%=form_with url: test_path(item),method: "put" do |f| %>
        <%=f.submit "Dell"%>
    <%end%>
    
        <%=link_to "Add Comment", show_path(item.id) , class:"btn btn-outline-dark"%>
        </td>
    </tr>
    <% end %>
    <%else%>
    <h2>No item</h2>
    <%end%>
    </tbody>
</table>

</div>