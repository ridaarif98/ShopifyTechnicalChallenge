<h1 class="heading m-3">Deleted Comments</h1>
<div class="mb-3 col-sm-2 m-3">
   
        <%=link_to 'Back', root_path, class:"btn btn-primary form-control"%>
  
</div>
<div class="listDiv m-3">
<% if @comments.any?%>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
        <th>Comments</th>
        <th>Time</th>
        <th>Action</th>
        </tr>
    </thead>

    <tbody>
    
    <% @comments.each do |comment|%>
    <tr>
      <td><%= comment.text%></th>
 <td><%= comment.updated_at%></td>
     
      <td class="mb-3 col-sm-2">
      <%=form_with url: dell_comment_path(comment),method: "put" do |f| %>
        <%=f.submit "Restore",class:" btn btn-primary m-1"%>
    <%end%>
    
    <%=button_to "Delete", comment, method: :delete, class:" btn btn-primary m-1"%>
  
       </td>
  
    </tr>
    <% end %>
    <%else%>
    <h2>No comments</h2>
    
    </tbody>
</table>
<%end%>
</div>